[color]
	ui = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold


[format]
	pretty = format:%C(blue)%ad%Creset %C(yellow)%h%C(green)%d%Creset %C(blue)%s %C(magenta) [%an]%Creset


[apply]
	whitespace = nowarn

[branch]
	autosetupmerge = true

[core]
  autocrlf = false


[alias]
	spull = svn rebase
	spush = svn dcommit

	log = log --pretty=oneline -n 20 --graph
	slog = svn log --color --oneline --show-commit
	bbcconfig = !git config user.name \"Simon Thulbourn\" && git config user.email \"simon.thulbourn@bbc.co.uk\"
[user]
	name = Simon Thulbourn
	email = simon.thulbourn@bbc.co.uk
